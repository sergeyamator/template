mixin svgList(items, className, active, url, svgName, svgClass)
  div(class="#{className}")
    ul(class="#{className}_list")
      each item, key in items
        if key == active
          li(class="#{className}_item #{className}_item--active")
            a(href="#{url[key]}" class="#{className}_link" target="_blank")
              +svg('' + svgName[key], '' + svgClass[key], item)
        else
          li(class="#{className}_item")
            a(href="#{url[key]}" class="#{className}_link" target="_blank")
              +svg('' + svgName[key], '' + svgClass[key], item)
