mixin list(items, className, active, url)
  div(class="#{className}")
    ul(class="#{className}_list")
      each item, key in items
        if key == active
          li(class="#{className}_item #{className}_item--active")
            a(href="#{url[key]}" class="#{className}_link")= item
        else
          li(class="#{className}_item")
            a(href="#{url[key]}" class="#{className}_link")= item


- var svgPath = "assets/img/svg-sprite.svg"

mixin svg(svgName, className, title)
  svg(class=className)
    title= title
    use(xlink:href=svgPath+'#'+svgName)

